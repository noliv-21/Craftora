<%-include('../partials/user/header')%>
  <% if (greetName){ %>
    <section class="bg-yellow-100 text-center py-8">
      <h1 class="text-3xl font-playfair">Welcome <%= greetName %> !</h1>
    </section>
    <% } %>
      <!-- Carousel -->
      <section class="relative">
        <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
          </div>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="images/carousel/Halloween candles.avif" class="d-block w-full h-[350px]" alt="...">
              <div class="carousel-caption d-none d-md-block">
                <h5>First slide label</h5>
                <p>Some representative placeholder content for the first slide.</p>
              </div>
            </div>
            <div class="carousel-item">
              <img src="images/carousel/elephant sculpture.jpg" class="d-block w-full h-[350px]" alt="...">
              <div class="carousel-caption d-none d-md-block">
                <h5>Second slide label</h5>
                <p>Some representative placeholder content for the second slide.</p>
              </div>
            </div>
            <div class="carousel-item">
              <img src="images/carousel/wolf printed shirt.webp" class="d-block w-full h-[350px]" alt="...">
              <div class="carousel-caption d-none d-md-block">
                <h5>Third slide label</h5>
                <p>Some representative placeholder content for the third slide.</p>
              </div>
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </section>

      <section class="container mx-auto py-8" style="padding:30px 150px">
        <h2 class="text-2xl font-bold mb-4">Featured Categories</h2>
        <div class="grid grid-cols-<%= categories.length%> gap-4">
            <% categories.forEach((cat,index)=>{ %>
            <div class="text-center">
              <img alt="Category Image" class="mx-auto rounded-md" height="200" width="200"
                src="https://storage.googleapis.com/a1aa/image/4jCITnqLj0pFIl4jciHtebl3QQIg5ikNdOTi20y1qcoyw90JA.jpg"/>
              <p><%= cat.name %></p>
            </div>
            <% }) %>
          </div>
      </section>

      <section class="container mx-auto py-8" style="padding:30px 150px">
        <h2 class="text-2xl font-bold mb-4">
          Daily Deals
        </h2>
        <div class="grid grid-cols-5 gap-4">
          <% products.forEach((product,index)=>{ %>
            <a href="/user/product/<%= product._id %>">
              <div class="text-center">
                <img alt="" class="mx-auto rounded-md" height="200" width="200"
                  src="<%= product.image && product.image.length ? '/uploads/product-images/' + product.image[0] : '/images/no_productImage.png' %>"/>
                <p><%= product.name %></p>
                <p><b>₹</b> <%= product.sellingPrice %></p>
              </div>
            </a>
          <% }) %>
        </div>
      </section>

      <section class="text-white py-8 h-96 relative">
        <div class="container mx-auto text-center h-full flex flex-col justify-center">
          <!-- Background div -->
          <div class="absolute top-0 left-0 w-full h-[60%] bg-orange-500"></div>
          
          <!-- Heading -->
          <div class="z-10 mb-4">
            <h2 class="text-2xl font-bold">Discover the latest trends from small shops</h2>
          </div>
          
          <!-- Images Section -->
          <div class="flex justify-evenly z-10 mt-4">
            <div class="text-center">
              <img alt="Marble earrings" class="mx-auto rounded-full" height="200" width="200"
                   src="https://storage.googleapis.com/a1aa/image/ON43A51Ozlo0F9Rn11mzSNUQK0eqIIB5fmexnBTkmhltD3TnA.jpg"/>
              <p class="text-gray-800 font-bold mt-2">Marble Earrings</p>
            </div>
            <div class="text-center">
              <img alt="Pumpkin Spice" class="mx-auto rounded-full" height="200" width="200"
                   src="https://storage.googleapis.com/a1aa/image/lZecKyWIHsX5TSqAmqswAZNwH69MSv9fVSaop26596Vjh7pTA.jpg"/>
              <p class="text-gray-800 font-bold mt-2">Pumpkin Spice</p>
            </div>
            <div class="text-center">
              <img alt="Suede Handbags" class="mx-auto rounded-full" height="200" width="200"
                   src="https://storage.googleapis.com/a1aa/image/Ikb15aof3GzSOiQ2eTPBRQ9JDoxtowAbJljwEjafNf4gGunOB.jpg"/>
              <p class="text-gray-800 font-bold mt-2">Suede Handbags</p>
            </div>
          </div>
        </div>
      </section>
      

      <section class="container mx-auto py-8" style="padding:30px 150px">
        <h2 class="text-2xl font-bold mb-4">
          Shop extra-ordinary items at special prices
        </h2>
        <div class="grid grid-cols-5 gap-4">
          <% products.forEach((product,index)=>{ %>
            <div class="text-center">
              <img alt="" class="mx-auto rounded-md" height="200" width="200"
                src="<%= product.image && product.image.length ? 'uploads/product-images/' + product.image[0] : 'images/no_productImage.png' %>"/>
              <p><%= product.name %></p>
              <p><b>₹</b> <%= product.sellingPrice %></p>
            </div>
          <% }) %>
        </div>
      </section>

      <section class="bg-yellow-100 py-8">
        <div class="container mx-auto text-center">
          <h2 class="text-2xl font-bold mb-4">What is CRAFTORA?</h2>
          <p class="mb-4">
            Craftora is a global marketplace for creative and one-of-a-kind goods. It's home to a universe of special,
            extraordinary items, from unique home decor pieces to trending fashion finds. It was founded in 2020.
          </p>
          <p class="mb-4">
            Craftora is a place where creativity lives and thrives because it's powered by people just like you. We help
            our
            community of sellers turn their ideas into successful businesses. Our platform connects them with 89.9
            million
            active buyers looking for something special with creative items to express their unique identity.
          </p>
          <p class="mb-4">Have a question? Well, we've got some answers.</p>
          <button class="bg-gray-800 text-white px-4 py-2 rounded-full">Go to help center</button>
        </div>
      </section>
      <%-include('../partials/user/footer')%>