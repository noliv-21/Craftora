<style>
    body {
        font-family: 'Inter', sans-serif;
    }
</style>
<div class="flex">
    <!-- Sidebar -->
    <%-include('../../partials/admin/side bar')%>
        <!-- Main Content -->
        <div class="flex-1 p-6">
            <!-- Header -->
            <%-include('../../partials/admin/header')%>
                <!-- User Content -->
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <div class="flex justify-between items-center mb-6">
                        <h2 class="text-2xl font-semibold">
                            Customers
                        </h2>
                        <div class="flex space-x-4">
                            <button class="bg-purple-100 text-purple-500 px-4 py-2 rounded-lg">Export</button>
                            <button class="bg-gray-100 text-gray-500 px-4 py-2 rounded-lg">Filters</button>
                        </div>
                    </div>
                    <div class="flex justify-between items-center mb-4">
                        <div class="mt-4 text-sm text-gray-500">
                            <a class="text-blue-500" href="/admin/home">Dashboard</a>
                            &gt;
                            <span>Customers List</span>
                        </div>
                    </div>
                    <div class="mb-4">
                        <input type="text" placeholder="Search customer..."
                            class="w-full p-3 border border-gray-300 rounded-lg">
                    </div>
                    <table class="w-full text-left">
                        <thead>
                            <tr class="text-gray-500">
                                <th class="py-2">Customer Name</th>
                                <th class="py-2">Phone</th>
                                <th class="py-2">Orders</th>
                                <th class="py-2">Is Verified</th>
                                <th class="py-2">Status</th>
                                <th class="py-2">Created</th>
                                <th class="py-2">Block/Unblock</th>
                            </tr>
                        </thead>
                        <tbody class="text-gray-700">
                            <% users.forEach((user)=>{%>
                            <tr class="border-b">
                                <td class="py-2 flex items-center">
                                    <div class="w-10 h-10 bg-gray-200 rounded-full mr-3"></div>
                                    <div>
                                        <div class="font-semibold"><%= user.username %></div>
                                        <div class="text-gray-500 text-sm"><%= user.email %></div>
                                    </div>
                                </td>
                                <td class="py-2"><%= user.phone %></td>
                                <td class="py-2">0</td>
                                <td class="py-2">
                                    <% if(user.isVerified){ %>
                                        <%= user.isVerified %>
                                    <% } else if(user.isGoogleUser){ %>
                                        <%= user.isGoogleUser %>
                                    <% } else{ %>
                                        <% return false %>
                                    <% } %>
                                </td>
                                <td class="py-2">
                                    <% if(user.isBlocked){%>
                                        <span class="bg-red-100 text-red-500 px-2 py-1 rounded-lg">Blocked</span></td>
                                    <% } else{ %>
                                        <span class="bg-green-100 text-green-500 px-2 py-1 rounded-lg">Active</span></td>
                                    <% } %>
                                <td class="py-2"><%= user.createdAt %></td>
                                <td class="py-2 flex space-x-2">
                                    <td class="py-2 flex justify-content-center">
                                        <% if (user.isBlocked) { %>
                                            <form action="/admin/blockUser" method="POST"
                                                style="display: inline;">
                                                <input type="hidden" name="id" value="<%= user._id %>">
                                                <input type="hidden" name="isBlocked" value="false">
                                                <button type="submit"
                                                    style="background: none; border: none; cursor: pointer;">
                                                    <i class="fas fa-check-circle text-gray-500"></i>
                                                </button>
                                            </form>
                                        <% } else { %>
                                            <form action="/admin/blockUser" method="POST"
                                                style="display: inline;">
                                                <input type="hidden" name="id" value="<%= user._id %>">
                                                <input type="hidden" name="isBlocked" value="true">
                                                <button type="submit"
                                                    style="background: none; border: none; cursor: pointer;">
                                                    <i class="fas fa-ban text-gray-500"></i>
                                                </button>
                                            </form>
                                        <% } %>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                    <div class="flex justify-between items-center mt-4">
                        <span class="text-gray-500">Showing 1-10 from 100</span>
                        <div class="flex space-x-2">
                            <button class="bg-blue-100 text-blue-500 px-3 py-1 rounded-lg">1</button>
                            <button class="bg-gray-100 text-gray-500 px-3 py-1 rounded-lg">2</button>
                            <button class="bg-gray-100 text-gray-500 px-3 py-1 rounded-lg">3</button>
                            <button class="bg-gray-100 text-gray-500 px-3 py-1 rounded-lg">4</button>
                            <button class="bg-gray-100 text-gray-500 px-3 py-1 rounded-lg">5</button>
                            <button class="bg-gray-100 text-gray-500 px-3 py-1 rounded-lg">&gt;</button>
                        </div>
                    </div>
                </div>
        </div>
</div>